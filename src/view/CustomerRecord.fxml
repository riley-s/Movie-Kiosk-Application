<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.CustomerRecordController"
            alignment="center" spacing="10"
            styleClass="root" prefWidth="800.0">

    
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>
    
    <HBox spacing="10">
        <ImageView>
            <image>
                <Image url="@movie_icon.png" />
            </image>
	</ImageView>
        <VBox alignment="center">
            <Label styleClass="h1" text="Customer Record"></Label>
        </VBox>
    </HBox>
    
    <HBox alignment="center" spacing="10">
        <Label text="Customer ID:"></Label> 
	<TextField fx:id="idTf"></TextField>
	<Button fx:id="idBtn" text="Select Customer" onAction="#loadMovies"></Button>
    </HBox>
    
    <Text fx:id="customerDetailsTxt"></Text>
    
    <Label styleClass="h2" text="Rented Movies"></Label>
    <TableView fx:id="rentedMoviesTv" prefHeight="200">
        <placeholder>
            <Label text="No results found."></Label>
        </placeholder>
        <columns>
            <TableColumn text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Year">
                <cellValueFactory>
                    <PropertyValueFactory property="year" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Genre">
                <cellValueFactory>
                    <PropertyValueFactory property="genre" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Price">
                <cellValueFactory>
                    <PropertyValueFactory property="price" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    
    <Label styleClass="h2" text="Renting History"></Label>
    <TableView fx:id="rentingHistoryTv" prefHeight="200">
        <columns>
            <TableColumn text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Year">
                <cellValueFactory>
                    <PropertyValueFactory property="year" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Genre">
                <cellValueFactory>
                    <PropertyValueFactory property="genre" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Price">
                <cellValueFactory>
                    <PropertyValueFactory property="price" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button text="Close" onAction="#handleExit"></Button>
    
</VBox>
